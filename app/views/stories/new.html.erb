<div class="container-fluid">
   <center> <p class="bg-info">New Story</p></center>
<div class="jumbotron">


<%= form_for(@story) do |f| %>
  

  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>
      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<p class="text-center"><%= render "#{@story.current_question}", :f => f %></p>


  <p><%= f.submit "Continue" %></p>
  <p><%= f.submit "Back", :name => "back_button" unless @story.first_question? %> </p>


<% end %>

<%= link_to 'Back to my stories', stories_path %>
</div>
</div>