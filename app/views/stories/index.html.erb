<p id="notice"><%= notice %></p>

  <h1>My Stories</h1>

    <div id="stories" class="transitions-enabled">
      <% @stories.each do |story| %>
        <div class="box panel panel-default">
          <%= link_to image_tag("reading.jpg"), story %>
          <br>
          <br>
          <strong><%= link_to story.story_title, story %></strong>
            <div class="panel-body">
              <div class="actions">
                <%= link_to edit_story_path(story) do %>
                  <span class="glyphicon glyphicon-edit"></span>
                  Edit
                <% end %>
                <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
                  Delete
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
    </div>

  <div class="center">
    <%= link_to 'New Story', new_story_path, class: "btn btn-warning btn-lg" %>
  </div>